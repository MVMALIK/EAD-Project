                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="text-field">Category</label>
                                        <div class="col-md-10">
                                            <input id="category" class="form-control" placeholder="Select Category NO" type="text" list="temp" disabled>
                                        </div>
                                    </div>
