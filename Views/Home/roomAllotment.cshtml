    <script>
        $(document).ready(function () {
            function isNumber(evt) {
                evt = (evt) ? evt : window.event;
                var charCode = (evt.which) ? evt.which : evt.keyCode;
                if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                    return false;
                }
                return true;
            }
            $("#roomNo").focusout(function () {
                var abc = $("#roomNo").val();
                $.blockUI({
                    css: {
                        border: 'none',
                        padding: '15px',
                        backgroundColor: '#000',
                        '-webkit-border-radius': '10px',
                        '-moz-border-radius': '10px',
                        opacity: .5,
                        color: '#fff'
                    }
                });
                $.ajax({
                    cache: false,
                    type: "POST",
                    url: "/Home/getRoomCharges",
                    data: { id: $.trim($("#roomNo").val()) },
                    dataType: "json",
                    success: function (serverData) {
                        //alert(serverData["catNo"] + serverData["charges"]);
                        $("#category").val(serverData["catNo"]);
                        $("#charges").val(serverData["charges"]);
                        $.unblockUI();
                    },
                    error: function () {
                        $.unblockUI();
                        showMsg("alert-danger", "Failed", " to Communicate with Server hehehe");
                        //alert("Critical Error!. Failed to call the server.");
                    }
                });

            });
            function showMsg(class_name, msg1, msg2) {
                if ($("#alertType").length) {
                    setTimeout(function () { $("#alertType").remove(); }, 1000);
                } else {
                    var text = '    \
                            <div id="alertType" class="alert ' + class_name + '" role="alert">  \
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>    \
                                <strong>'+ msg1 + '</strong> ' + msg2 + ' \
                            </div>  \
                            ';
                    var dom = $(text);
                    $("#roomId").append(dom);
                    setTimeout(function () { $("#alertType").remove(); }, 3000);
                }
                $("html, body").animate({ scrollTop: 0 }, "slow");
            }
            $('#allotRoom').collapse({
                toggle: false
            });
            $("#searchStudentId").click(function () {
                $.blockUI({
                    css: {
                        border: 'none',
                        padding: '15px',
                        backgroundColor: '#000',
                        '-webkit-border-radius': '10px',
                        '-moz-border-radius': '10px',
                        opacity: .5,
                        color: '#fff'
                    }
                });
                $.ajax({
                    cache: false,
                    type: "POST",
                    url: "/Home/searchStd",
                    data: { id: $.trim($("#searchStudent").val()) },
                    dataType: "json",
                    success: function (serverData) {
                        if (serverData) {
                            $("#fthName").val(serverData["FatherName"]).prop("disabled",true);
                            $("#stdName").val(serverData["std_Name"]).prop("disabled", true);
                            $.unblockUI();
                            $("#allotRoom").collapse('show');
                            $("#roomId :input").prop('disabled',true);
                        } else {
                            $.unblockUI();
                            showMsg("alert-danger", "Failed", "No Such Student Found");
                            $("#allotRoom").collapse('hide');
                            $("#roomId :input").prop('disabled', false);
                        }
                    },
                    error: function () {
                        $.unblockUI();
                        alert("Critical Error!. Failed to call the server.");
                    }
                });
            });
            $("#cancel").click(function () {
                $("#allotRoom").collapse('hide');
                $("#roomId :input").prop('disabled', false);
            });
            $("#allot").click(function () {
                var clientData = new Array();
                clientData.push($.trim($("#searchStudent").val()));
                clientData.push($.trim($("#roomNo").val()));
                //var clientData = {
                //    studentId: $.trim($("#searchStudent").val()),
                //    roomId: $.trim($("#roomNo").val())
                //};
                $.blockUI({
                    css: {
                        border: 'none',
                        padding: '15px',
                        backgroundColor: '#000',
                        '-webkit-border-radius': '10px',
                        '-moz-border-radius': '10px',
                        opacity: .5,
                        color: '#fff'
                    }
                });
                $.ajax({
                    cache: false,
                    type: "POST",
                    url: "/Home/allotRoomToStudent",
                    data: JSON.stringify({ 'values': clientData }),
                    dataType: "json",
                    contentType: 'application/json',    //THis line is very important without it data will not be received in controller
                    success: function (serverData) {
                        //alert(serverData);
                        var flag = 0;
                        for (var i = 0; i < serverData.length; i++) {
                            if (serverData[i] != "empty") {
                                $(serverData[i]).parent('div').addClass("has-error");
                                flag = 1;
                            }
                        }
                        if (flag == 0) {
                            $("#visitsData input").each(function () {
                                switch (this.type) {
                                    case 'password':
                                    case 'text':
                                    case 'textarea':
                                    case 'file':
                                    case 'select-one':
                                    case 'select-multiple':
                                    case 'date':
                                    case 'number':
                                    case 'tel':
                                    case 'email':
                                        $(this).val('');
                                        break;
                                }
                            });
                            $.unblockUI();
                            showMsg("alert-success", "Success", "Successfully alloted room to Student");
                            $("#allotRoom").collapse('hide');
                            $("#roomId :input").prop('disabled', false);
                            $("#charges").val('');
                            $("#category").val('');
                        } else {
                            $.unblockUI();
                            showMsg("alert-danger", "Error", "Please Correct Errors and then Continue");
                        }
                    },
                    error: function () {
                        $.unblockUI();
                        showMsg("alert-danger", "Failed", " to Communicate with Server");
                    }
                });
            });
            $("input,textarea").keyup(function () {
                if ($(this).parent().hasClass("has-error")) {
                    $(this).parent().removeClass("has-error");
                }
            });
            $("select").click(function () {
                if ($(this).parent().hasClass("has-error")) {
                    $(this).parent().removeClass("has-error");
                }
            });
            $('#expandit').trigger('click');
        });
    </script>
