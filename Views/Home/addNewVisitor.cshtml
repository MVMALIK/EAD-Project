    <script>
        $(document).ready(function () {
            $("html, body").animate({ scrollTop: 0 }, "slow");
            var temp = "new";
            $("#visitorCnic").focusout(function () {
                $.blockUI({
                    css: {
                        border: 'none',
                        padding: '15px',
                        backgroundColor: '#000',
                        '-webkit-border-radius': '10px',
                        '-moz-border-radius': '10px',
                        opacity: .5,
                        color: '#fff'
                    }
                });
                $.ajax({
                    cache: false,
                    type: "POST",
                    url: "/Home/checkVisitor",
                    data: { id: $("#visitorCnic").val() },
                    dataType: "json",
                    success: function (serverData) {
                        if (serverData) {
                            $("#visitorData :input").attr("disabled", true);
                            $("#btnnn").attr("disabled", false);
                            $("#cancel").attr("disabled", false);
                            $("#studentId").attr("disabled", false);
                            $("#relation").attr("disabled", false);

                            $("#visitorName").val(serverData["Visitor_name"]);
                            $("#visitorMob").val(serverData["Phone"]);
                            temp = "old";
                        }
                        $.unblockUI();
                    },
                    error: function () {
                        $.unblockUI();
                        alert("Critical Error!. Failed to call the server.");
                    }
                });
            });
            function setDate() {
                var now = new Date();
                var day = ("0" + now.getDate()).slice(-2);
                var month = ("0" + (now.getMonth() + 1)).slice(-2);
                var today = (day) + "/" + (month) + "/" + now.getFullYear();
                $("#date").val(today).prop("disabled", true);
            }
            setDate();
            function showMsg(class_name, msg1, msg2) {
                if ($("#alertType").length) {
                    setTimeout(function () { $("#alertType").remove(); }, 1000);
                } else {
                    var text = '    \
                            <div id="alertType" class="alert ' + class_name + '" role="alert">  \
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>    \
                                <strong>'+ msg1 + '</strong> ' + msg2 + ' \
                            </div>  \
                            ';
                    var dom = $(text);
                    //$("#searchFormId").append(dom).delay(4000).queue(function () { $("#alertType").remove(); });
                    $("#addNewVisitor").prepend(dom);
                    setTimeout(function () { $("#alertType").remove(); }, 3000);
                }
                $("html, body").animate({ scrollTop: 0 }, "slow");
            }
            $("#cancel").click(function(){
                $("input").each(function () {
                    switch (this.type) {
                        case 'password':
                        case 'text':
                        case 'textarea':
                        case 'file':
                        case 'select-one':
                        case 'select-multiple':
                        case 'date':
                        case 'number':
                        case 'tel':
                        case 'email':
                            $(this).val('');
                            break;
                    }
                });
                $("#visitorData :input").attr("disabled", false);
            });
            $("#btnnn").click(function () {

                // collect the data to a Json object.
                var clientData = {
                    visitorName: $.trim($("#visitorName").val()),
                    visitorCnic: $.trim($("#visitorCnic").val()),
                    relation: $.trim($("#relation").val()),
                    visitorMob: $.trim($("#visitorMob").val()),
                    studentId: $.trim($("#studentId").val()),
                    date: $.trim($("#date").val()),
                    new_or_old: temp
                };
                $.blockUI({
                    css: {
                        border: 'none',
                        padding: '15px',
                        backgroundColor: '#000',
                        '-webkit-border-radius': '10px',
                        '-moz-border-radius': '10px',
                        opacity: .5,
                        color: '#fff'
                    }
                });
                $.ajax({
                    cache: false,
                    type: "POST",
                    url: "/Home/addVisitor",
                    data: { values: clientData },
                    dataType: "json",
                    success: function (serverData) {
                        //alert(serverData);
                        var flag = 0;
                        for (var i = 0; i < serverData.length; i++) {
                            //alert(serverData[i]);
                            if (serverData[i] != "empty") {
                                $(serverData[i]).parent('div').addClass("has-error");
                                flag = 1;
                            }
                        }
                        if (flag == 0) {
                            $("input").each(function () {
                                switch (this.type) {
                                    case 'password':
                                    case 'text':
                                    case 'textarea':
                                    case 'file':
                                    case 'select-one':
                                    case 'select-multiple':
                                    case 'date':
                                    case 'number':
                                    case 'tel':
                                    case 'email':
                                        $(this).val('');
                                        break;
                                }
                            });
                            $.unblockUI();
                            showMsg("alert-success", "Success", "New Visit Added Successfully");
                            setDate();
                            $("#visitorData :input").attr("disabled", false);
                        } else {
                            $.unblockUI();
                            showMsg("alert-danger", "Error", "Please Correct Errors and then Continue");
                        }
                    },
                    error: function () {
                        $.unblockUI();
                        showMsg("alert-danger", "Failed", " to Communicate with Server hehehe");
                        //alert("Critical Error!. Failed to call the server.");
                    }
                });
            });

            // Set up the change event to the textboxes, so when user
            // makes changes, clear the error messages associated to the textbox.
            $("input,textarea").keyup(function () {
                if ($(this).parent().hasClass("has-error")) {
                    $(this).parent().removeClass("has-error");
                }
            });
        });
    </script>
