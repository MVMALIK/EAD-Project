    <script >
        $("html, body").animate({ scrollTop: 0 }, "slow");
        $('#visitsTable,#visitorData').collapse({
            toggle: false
        });
        function showMsg(class_name, msg1, msg2) {
            if ($("#alertType").length) {
                setTimeout(function () { $("#alertType").remove(); }, 1000);
            } else {
                var text = '    \
                            <div id="alertType" class="alert ' + class_name + '" role="alert">  \
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>    \
                                <strong>'+ msg1 + '</strong> ' + msg2 + ' \
                            </div>  \
                            ';
                var dom = $(text);
                $("#searchFormId").append(dom);
                setTimeout(function () { $("#alertType").remove(); }, 3000);
            }
            $("html, body").animate({ scrollTop: 0 }, "slow");
        }
        $("#searchVisitor").click(function () {
            $.blockUI({
                css: {
                    border: 'none',
                    padding: '15px',
                    backgroundColor: '#000',
                    '-webkit-border-radius': '10px',
                    '-moz-border-radius': '10px',
                    opacity: .5,
                    color: '#fff'
                }
            });
            $.ajax({
                cache: false,
                type: "POST",
                url: "/Home/searchVisitorOnly",
                data: { id: $.trim($("#searchVisitorById").val()) },
                dataType: "json",
                success: function (serverData) {
                    if (serverData) {
                        $("#visitorIdInSearch :input").attr("disabled", true);
                        $("#visitorData").collapse('show');
                        //$("#searchVisitor").attr("disabled", false);

                        $("#visitorName").val(serverData["Visitor_name"]);
                        $("#visitorCnic").val(serverData["CNIC"]);
                        $("#visitorMob").val(serverData["Phone"]);
                        $.unblockUI();
                    } else {
                        $.unblockUI();
                        showMsg("alert-danger", "Failed", "No Such Visitor Found");
                        $("#visitorData").collapse('hide');
                    }
                },
                error: function () {
                    $.unblockUI();
                    showMsg("alert-danger", "Failed", " to Communicate with Server");
                }
            });
        });
        $("#update").click(function () {
            var clientData = {
                visitorName: $.trim($("#visitorName").val()),
                visitorCnic: $.trim($("#visitorCnic").val()),
                visitorMob: $.trim($("#visitorMob").val()),
                studentId: "",
                relation: "",
                date: "",
                new_or_old: $.trim($("#searchVisitorById").val())
            };
            $.blockUI({
                css: {
                    border: 'none',
                    padding: '15px',
                    backgroundColor: '#000',
                    '-webkit-border-radius': '10px',
                    '-moz-border-radius': '10px',
                    opacity: .5,
                    color: '#fff'
                }
            });
            $.ajax({
                cache: false,
                type: "POST",
                url: "/Home/updateVisitorOnly",
                data: { values: clientData },
                dataType: "json",
                success: function (serverData) {
                    var flag = 0;
                    for (var i = 0; i < serverData.length; i++) {
                        if (serverData[i] != "empty") {
                            $(serverData[i]).parent('div').addClass("has-error");
                            flag = 1;
                        }
                    }
                    if (flag == 0) {
                        $("#visitorData input").each(function () {
                            switch (this.type) {
                                case 'password':
                                case 'text':
                                case 'textarea':
                                case 'file':
                                case 'select-one':
                                case 'select-multiple':
                                case 'date':
                                case 'number':
                                case 'tel':
                                case 'email':
                                    $(this).val('');
                                    break;
                            }
                        });
                        $.unblockUI();
                        showMsg("alert-success", "Success", "Visitor's Record Update Successfully");
                        $("#visitorIdInSearch :input").attr("disabled", false);
                        $("#visitorData").collapse('hide');
                    } else {
                        $.unblockUI();
                        showMsg("alert-danger", "Error", "Please Correct Errors and then Continue");
                    }
                },
                error: function () {
                    $.unblockUI();
                    showMsg("alert-danger", "Failed", " to Communicate with Server");
                    //alert("Critical Error!. Failed to call the server.");
                }
            });
        });
        $("#cancel").click(function () {
            $("#visitorIdInSearch :input").attr("disabled", false);
            $("#visitorData").collapse('hide');
        });
        $("input,textarea").keyup(function () {
            if ($(this).parent().hasClass("has-error")) {
                $(this).parent().removeClass("has-error");
            }
        });
        $('#expandit').trigger('click');
    </script>
