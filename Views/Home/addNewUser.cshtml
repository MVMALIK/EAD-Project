    <script>
        $(document).ready(function () {
            $("html, body").animate({ scrollTop: 0 }, "slow");
            function displayID() {
                $.ajax({
                    cache: false,
                    type: "POST",
                    url: "/Home/getUserId",
                    dataType: "json",
                    success: function (serverData) {

                        //var dat = new Date();
                        //alert(dat.toISOString().substr(0, 10));

                        var now = new Date();

                        var day = ("0" + now.getDate()).slice(-2);
                        var month = ("0" + (now.getMonth() + 1)).slice(-2);

                        //var today = now.getFullYear() + "-" + (month) + "-" + (day);
                        var today = (day) + "/" + (month) + "/" + now.getFullYear();
                        //alert(serverData +"\n"+ today);
                        //$('#datePicker').val(today);
                        $("#userId").val(serverData).prop("disabled", true); 
                        $("#userHiredate").val(today).prop("disabled", true);
                    },
                    error: function () {
                        showMsg("alert-danger", "Failed", " to get ID for New User");
                        //alert("Critical Error!. Failed to call the server.");
                    }
                });
            }
            displayID();
            function showMsg(class_name, msg1, msg2) {
                if ($("#alertType").length) {
                    setTimeout(function () { $("#alertType").remove(); }, 1000);
                } else {
                    var text = '    \
                            <div id="alertType" class="alert ' + class_name + '" role="alert">  \
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>    \
                                <strong>'+ msg1 + '</strong> ' + msg2 + ' \
                            </div>  \
                            ';
                    var dom = $(text);
                    //$("#searchFormId").append(dom).delay(4000).queue(function () { $("#alertType").remove(); });
                    $("#addNewUser").prepend(dom);
                    setTimeout(function () { $("#alertType").remove(); }, 3000);
                }
                $("html, body").animate({ scrollTop: 0 }, "slow");
            }
            $("#btnnn").click(function () {

                // collect the data to a Json object.
                var clientData = {
                    userID: $.trim($("#userId").val()),
                    userName: $.trim($("#userName").val()),
                    userCnic: $.trim($("#userCnic").val()),
                    userEmail: $.trim($("#userEmail").val()),
                    userHiredate: $.trim($("#userHiredate").val()),
                    userMob: $.trim($("#userMob").val()),
                    loginId: $.trim($("#loginId").val()),
                    password: $.trim($("#password").val()),
                    cPassword: $.trim($("#cPassword").val()),
                    userType: $.trim($("#userType").val())
                };
                //alert($("#userId").val() + "\n" + $("#userName").val() + "\n" + $("#userCnic").val() + "\n" + $("#userEmail").val() + "\n" + $("#userHiredate").val() + "\n");
                //alert($("#userMob").val() + "\n" + $("#loginId").val() + "\n" + $("#password").val() + "\n" + $("#cPassword").val() + "\n" + $("#userType").val());
                $.ajax({
                    cache: false,
                    type: "POST",
                    url: "/Home/addUser",
                    data: { values: clientData },
                    dataType: "json",
                    success: function (serverData) {
                        //alert(serverData);
                        var flag = 0;
                        for (var i = 0; i < serverData.length; i++) {
                            //alert(serverData[i]);
                            if (serverData[i] != "empty") {
                                $(serverData[i]).parent('div').addClass("has-error");
                                flag = 1;
                            }
                        }
                        if (flag == 0) {
                            $("input").each(function () {
                                switch (this.type) {
                                    case 'password':
                                    case 'text':
                                    case 'textarea':
                                    case 'file':
                                    case 'select-one':
                                    case 'select-multiple':
                                    case 'date':
                                    case 'number':
                                    case 'tel':
                                    case 'email':
                                        $(this).val('');
                                        break;
                                }
                            });
                            $("textarea").each(function () {
                                $(this).val('');
                            });
                            showMsg("alert-success", "Success", "New Student Added Successfully");
                            displayID();
                        } else {
                            showMsg("alert-danger", "Error", "Please Correct Errors and then Continue");
                        }
                    },
                    error: function () {
                        showMsg("alert-danger", "Failed", " to Communicate with Server hehehe");
                        //alert("Critical Error!. Failed to call the server.");
                    }
                });
            });

            // Set up the change event to the textboxes, so when user
            // makes changes, clear the error messages associated to the textbox.
            $("input,textarea").keyup(function () {
                if ($(this).parent().hasClass("has-error")) {
                    //Because both fields of password are related to each other
                    if ($(this).attr('id') == "password" || $(this).attr('id') == "cPassword") {
                        $("#password").parent().removeClass("has-error");
                        $("#cPassword").parent().removeClass("has-error");
                    } else {
                        $(this).parent().removeClass("has-error");
                    }
                }
            });
        });
