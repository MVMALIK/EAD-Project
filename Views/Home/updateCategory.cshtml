    <script>
        function isNumber(evt) {
            evt = (evt) ? evt : window.event;
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                return false;
            }
            return true;
        }
        $(document).ready(function () {
            $("html, body").animate({ scrollTop: 0 }, "slow");
            
            function showMsg(class_name, msg1, msg2) {
                if ($("#alertType").length) {
                    setTimeout(function () { $("#alertType").remove(); }, 1000);
                } else {
                    var text = '    \
                            <div id="alertType" class="alert ' + class_name + '" role="alert">  \
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>    \
                                <strong>'+ msg1 + '</strong> ' + msg2 + ' \
                            </div>  \
                            ';
                    var dom = $(text);
                    //$("#searchFormId").append(dom).delay(4000).queue(function () { $("#alertType").remove(); });
                    $("#idForMsg").append(dom);
                    setTimeout(function () { $("#alertType").remove(); }, 3000);
                }
                $("html, body").animate({ scrollTop: 0 }, "slow");
            }
            $("#edit").click(function () {
                $("#updateCategory :input").attr("disabled", false);
            });
            $("#cancel").click(function () {
                $("#catId :input").attr("disabled", false);
                $("#updateCategory").collapse('hide');
            });
            $("#update").click(function () {

                var clientData = {
                    categoryNo: $.trim($("#categoryNo").val()),
                    catType: $.trim($("#catType").val()),
                    charges: $.trim($("#charges").val())
                };
                $.blockUI({
                    css: {
                        border: 'none',
                        padding: '15px',
                        backgroundColor: '#000',
                        '-webkit-border-radius': '10px',
                        '-moz-border-radius': '10px',
                        opacity: .5,
                        color: '#fff'
                    }
                });
                $.ajax({
                    cache: false,
                    type: "POST",
                    url: "/Home/updateNewCategory",
                    data: { values: clientData },
                    dataType: "json",
                    success: function (serverData) {
                        var flag = 0;
                        for (var i = 0; i < serverData.length; i++) {
                            if (serverData[i] != "empty") {
                                $(serverData[i]).parent('div').addClass("has-error");
                                flag = 1;
                            }
                        }
                        if (flag == 0) {
                            $("input").each(function () {
                                switch (this.type) {
                                    case 'password':
                                    case 'text':
                                    case 'textarea':
                                    case 'file':
                                    case 'select-one':
                                    case 'select-multiple':
                                    case 'date':
                                    case 'number':
                                    case 'tel':
                                    case 'email':
                                        $(this).val('');
                                        break;
                                }
                            });
                            $.unblockUI();
                            showMsg("alert-success", "Success", "Room Updated Successfully");
                            $("#catId :input").attr("disabled", false);
                            $("#updateCategory").collapse('hide');
                        } else {
                            $.unblockUI();
                            showMsg("alert-danger", "Error", "Please Correct Errors and then Continue");
                        }
                    },
                    error: function () {
                        $.unblockUI();
                        showMsg("alert-danger", "Failed", " to Communicate with Server hehehe");
                        //alert("Critical Error!. Failed to call the server.");
                    }
                });
            });
            $("#searchCategory").click(function () {
                $.ajax({
                    cache: false,
                    type: "POST",
                    url: "/Home/getCategoryForUpdate",
                    data: { id: $.trim($("#searchCategoryById").val()) },
                    dataType: "json",
                    success: function (serverData) {
                        var flag = 0;
                        if (serverData) {
                            $("#categoryNo").val(serverData["category_no"]).prop("disabled", true);
                            $("#catType").val(serverData["category_type"]).prop("disabled", true);
                            $("#charges").val(serverData["charges"]).prop("disabled", true);

                            $("#searchCategoryById").prop("disabled", true);
                            $("#searchCategory").prop("disabled", true);
                            $("#updateCategory").collapse('show');
                            $.unblockUI();
                        } else {
                            console.log("found errror");
                            $.unblockUI();
                        }
                    },
                    error: function () {
                        $.unblockUI();
                    }
                });
            });
            $("input,textarea").keyup(function () {
                if ($(this).parent().hasClass("has-error")) {
                    $(this).parent().removeClass("has-error");
                }
            });
            $('#expandit').trigger('click');
        });
