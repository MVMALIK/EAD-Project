    <script>
        $(document).ready(function () {
            $("html, body").animate({ scrollTop: 0 }, "slow");
            function showMsg(class_name, msg1, msg2) {
                if ($("#alertType").length) {
                    setTimeout(function () { $("#alertType").remove(); }, 1000);
                } else {
                    var text = '    \
                            <div id="alertType" class="alert ' + class_name + '" role="alert">  \
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>    \
                                <strong>'+ msg1 + '</strong> ' + msg2 + ' \
                            </div>  \
                            ';
                    var dom = $(text);
                    $("#messageBox").append(dom);
                    setTimeout(function () { $("#alertType").remove(); }, 3000);
                }
                $("html, body").animate({ scrollTop: 0 }, "slow");
            }
            $("#submit").click(function () {

                var clientData = new Array();
                clientData.push($.trim($("#fname").val()));
                clientData.push($.trim($("#lname").val()));
                clientData.push($.trim($("#email").val()));
                clientData.push($.trim($("#phone").val()));
                clientData.push($.trim($("#message").val()));
                $.blockUI({
                    css: {
                        border: 'none',
                        padding: '15px',
                        backgroundColor: '#000',
                        '-webkit-border-radius': '10px',
                        '-moz-border-radius': '10px',
                        opacity: .5,
                        color: '#fff'
                    }
                });
                $.ajax({
                    cache: false,
                    type: "POST",
                    url: "/Home/emailUs",
                    data: { values: clientData },
                    dataType: "json",
                    success: function (serverData) {
                        //alert(serverData);
                        var flag = 0;
                        for (var i = 0; i < serverData.length; i++) {
                            if (serverData[i] != "empty") {
                                $(serverData[i]).parent('div').addClass("has-error");
                                flag = 1;
                            }
                        }
                        if (flag == 0) {
                            $("input").each(function () {
                                switch (this.type) {
                                    case 'password':
                                    case 'text':
                                    case 'textarea':
                                    case 'file':
                                    case 'select-one':
                                    case 'select-multiple':
                                    case 'date':
                                    case 'number':
                                    case 'tel':
                                    case 'email':
                                        $(this).val('');
                                        break;
                                }
                            });
                            $("textarea").each(function () {
                                $(this).val('');
                            });
                            $.unblockUI();
                            showMsg("alert-success", "Success", "New Student Added Successfully");
                        } else {
                            $.unblockUI();
                            showMsg("alert-danger", "Error", "Please Correct Errors and then Continue");
                        }
                    },
                    error: function () {
                        showMsg("alert-danger", "Failed", " to Communicate with Server");
                        $.unblockUI();
                    }
                });
            });

            $("input,textarea").keyup(function () {
                if ($(this).parent().hasClass("has-error")) {
                    $(this).parent().removeClass("has-error");
                }
            });
        });
    </script>
