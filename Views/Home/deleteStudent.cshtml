    <script>
        function showMsg(class_name, msg1, msg2) {
            if ($("#alertType").length) {
                setTimeout(function () { $("#alertType").remove(); }, 1000);
            } else {
                var text = '    \
                            <div id="alertType" class="alert ' + class_name + '" role="alert">  \
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>    \
                                <strong>'+ msg1 + '</strong> ' + msg2 + ' \
                            </div>  \
                            ';
                var dom = $(text);
                //$("#searchFormId").append(dom).delay(4000).queue(function () { $("#alertType").remove(); });
                $("#searchFormId").append(dom);
                setTimeout(function () { $("#alertType").remove(); }, 3000);
            }
            $("html, body").animate({ scrollTop: 0 }, "slow");
        }
        $('#confirm-delete').on('show.bs.modal', function (e) {
            $(this).find('.btn-ok').attr('href', $(e.relatedTarget).data('href'));
        });
        $(document).ready(function () {
            $("html, body").animate({ scrollTop: 0 }, "slow");
            $('#studentData').collapse({
                toggle: false
            });
            $("#searchStudent").click(function () {
                $.blockUI({
                    css: {
                        border: 'none',
                        padding: '15px',
                        backgroundColor: '#000',
                        '-webkit-border-radius': '10px',
                        '-moz-border-radius': '10px',
                        opacity: .5,
                        color: '#fff'
                    }
                });
                $.ajax({
                    cache: false,
                    type: "POST",
                    url: "/Home/searchStd",
                    data: { id: $.trim($("#searchStudentById").val()) },
                    dataType: "json",
                    success: function (serverData) {
                        if (serverData) {
                            $("#studentData").collapse('show');
                            $("#studentData :input").attr("disabled", true);
                            $("#delete").attr("disabled", false);
                            $("#cancel").attr("disabled", false);
                            $("#studentId :input").attr("disabled", true);

                            $("#stdName").val(serverData["std_Name"]);
                            $("#FthName").val(serverData["FatherName"]);
                            $('[name=gender][value=' + serverData["Gender"] + ']').prop('checked', true);
                            $("#cnic").val(serverData["CNIC_No"]);
                            $("#dob").val(serverData["DateOfBirth"]);
                            $("#mob").val(serverData["Phone"]);
                            $("#address").val(serverData["Address"]);
                            $("#city").val(serverData["City"]);
                            $("#province").val(serverData["Province"]);
                            $("#religion").val(serverData["Religion"]);
                            $.unblockUI();
                        } else {
                            showMsg("alert-danger", "Failed", "No Such Student Found");
                            $("#studentData").collapse('hide');
                            $.unblockUI();
                        }
                    },
                    error: function () {
                        showMsg("alert-danger", "Failed", "to call the server.");
                        $.unblockUI();
                    }
                });
            });
            $("#modalDelete").click(function () {
                $.blockUI({
                    css: {
                        border: 'none',
                        padding: '15px',
                        backgroundColor: '#000',
                        '-webkit-border-radius': '10px',
                        '-moz-border-radius': '10px',
                        opacity: .5,
                        color: '#fff'
                    }
                });
                $.ajax({
                    cache: false,
                    type: "POST",
                    url: "/Home/deleteStd",
                    data: { id: $.trim($("#searchStudentById").val()) },
                    dataType: "json",
                    success: function (serverData) {
                        if (serverData) {
                            $("input").each(function () {
                                switch (this.type) {
                                    case 'password':
                                    case 'text':
                                    case 'textarea':
                                    case 'file':
                                    case 'select-one':
                                    case 'select-multiple':
                                    case 'date':
                                    case 'number':
                                    case 'tel':
                                    case 'email':
                                        $(this).val('');
                                        break;
                                }
                            });
                            $("textarea").each(function () {
                                $(this).val('');
                            });
                            showMsg("alert-success", "Success", "Student's Record Deleted Successfully");
                            $("#studentId :input").attr("disabled", false);
                            $("#studentData").collapse('hide');
                            $.unblockUI();
                        } else {
                            showMsg("alert-danger", "Error", "Please Correct Errors and then Continue");
                            $.unblockUI();
                        }
                    },
                    error: function () {
                        showMsg("alert-danger", "Failed", "to call the server.");
                        $.unblockUI();
                    }
                });
            });
            $("#cancel").click(function () {
                $("html, body").animate({ scrollTop: 0 }, "slow");
                $("#studentId :input").attr("disabled", false);
                $("#studentData").collapse('hide');
            });
            $('#expandit').trigger('click');
        });
    </script>
