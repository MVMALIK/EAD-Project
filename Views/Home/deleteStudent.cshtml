                            <div class="panel-body">
                                <form class="form-horizontal" role="form" method="post" action="">
                                    <div class="form-group">
                                        <label for="stdName" class="col-sm-2 control-label">Student Name</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" name="myform" id="stdName" placeholder="Student Name">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="fthName" class="col-sm-2 control-label">Father Name</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" name="myform" id="FthName" placeholder="Father Name">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="h-input" class="col-sm-2 control-label">Gender</label>
                                        <div class="col-sm-10">
                                            <label class="radio radio-inline">
                                                <input type="radio" name="gender" value="Male" id="male">
                                                Male
                                            </label>
                                            <label class="radio radio-inline">
                                                <input type="radio" name="gender" value="Female" id="female">
                                                Female
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="h-input" class="col-sm-2 control-label">CNIC</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control mask-date" name="myform" id="cnic" data-mask="99999-9999999-9" data-mask-placeholder="_" placeholder="CNIC">
                                            @*<span class="input-group-addon"><i class="fa fa-calendar"></i></span>*@
                                            <p class="note">
                                                Data format *****-*******-*
                                            </p>
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label for="h-input" class="col-sm-2 control-label">D.O.B</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control mask-date" data-mask="99/99/9999" name="myform" id="dob" data-mask-placeholder="*" placeholder="D.O.B">
                                            @*<span class="input-group-addon"><i class="fa fa-calendar"></i></span>*@
                                            <p class="note">
                                                Data format **/**/****
                                            </p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="h-input" class="col-sm-2 control-label">Mobile</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control mask-date" data-mask="+99-999-9999999" name="myform" id="mob" data-mask-placeholder="X" placeholder="Mobile">
                                            @*<span class="input-group-addon"><i class="fa fa-calendar"></i></span>*@
                                            <p class="note">
                                                Data format +XX-XXX-XXXXXXX
                                            </p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Address</label>
                                        <div class="col-sm-10">
                                            <textarea class="form-control" name="myform" id="address" placeholder="Enter Address" rows="2"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="text-field">City</label>
                                        <div class="col-md-10">
                                            <input class="form-control" placeholder="Select City" type="text" list="mycity" name="myform" id="city">
                                            <datalist id="mycity">
                                                <option value="Lahore"></option>
                                                <option value="Gujranwala"></option>
                                                <option value="Karachi"></option>
                                                <option value="Islamabad"></option>
                                                <option value="Faisalabad"></option>
                                                <option value="Peshawar"></option>
                                                <option value="Haidarabad"></option>
                                                <option value="Queta"></option>
                                                <option value="Kashmir"></option>
                                                <option value="Gilgit"></option>
                                            </datalist>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="text-field">Province</label>
                                        <div class="col-md-10">
