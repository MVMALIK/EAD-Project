    <script >
        $("html, body").animate({ scrollTop: 0 }, "slow");
        function isNumber(evt) {
            evt = (evt) ? evt : window.event;
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                return false;
            }
            return true;
        }
        function showMsg(class_name, msg1, msg2) {
            if ($("#alertType").length) {
                setTimeout(function () { $("#alertType").remove(); }, 1000);
            } else {
                var text = '    \
                            <div id="alertType" class="alert ' + class_name + '" role="alert">  \
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>    \
                                <strong>'+ msg1 + '</strong> ' + msg2 + ' \
                            </div>  \
                            ';
                var dom = $(text);
                //$("#searchFormId").append(dom).delay(4000).queue(function () { $("#alertType").remove(); });
                $("#newRoom").prepend(dom);
                setTimeout(function () { $("#alertType").remove(); }, 3000);
            }
            $("html, body").animate({ scrollTop: 0 }, "slow");
        }
        $("#addRoom").click(function () {

            var clientData = {
                roomNo: $.trim($("#roomNo").val()),
                oldRoomNo: "",
                category: $.trim($("#category").val()),
                capacity: $.trim($("#capacity").val())
            };
            $.blockUI({
                css: {
                    border: 'none',
                    padding: '15px',
                    backgroundColor: '#000',
                    '-webkit-border-radius': '10px',
                    '-moz-border-radius': '10px',
                    opacity: .5,
                    color: '#fff'
                }
            });
            $.ajax({
                cache: false,
                type: "POST",
                url: "/Home/addNewRoom",
                data: { values: clientData },
                dataType: "json",
                success: function (serverData) {
                    var flag = 0;
                    for (var i = 0; i < serverData.length; i++) {
                        if (serverData[i] != "empty") {
                            $(serverData[i]).parent('div').addClass("has-error");
                            flag = 1;
                        }
                    }
                    if (flag == 0) {
                        $("input").each(function () {
                            switch (this.type) {
                                case 'password':
                                case 'text':
                                case 'textarea':
                                case 'file':
                                case 'select-one':
                                case 'select-multiple':
                                case 'date':
                                case 'number':
                                case 'tel':
                                case 'email':
                                    $(this).val('');
                                    break;
                            }
                        });
                        $.unblockUI();
                        showMsg("alert-success", "Success", "New Room Added Successfully");
                    } else {
                        $.unblockUI();
                        showMsg("alert-danger", "Error", "Please Correct Errors and then Continue");
                    }
                },
                error: function () {
                    $.unblockUI();
                    showMsg("alert-danger", "Failed", " to Communicate with Server hehehe");
                    //alert("Critical Error!. Failed to call the server.");
                }
            });
        });
        $("input,textarea").keyup(function () {
            if ($(this).parent().hasClass("has-error")) {
                $(this).parent().removeClass("has-error");
            }
        });
