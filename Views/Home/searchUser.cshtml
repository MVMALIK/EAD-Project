    <script >
        $(document).ready(function () {
            $("html, body").animate({ scrollTop: 0 }, "slow");
            $('#userData').collapse({
                toggle: false
            });
            function showMsg(class_name,msg1,msg2) {
                if ($("#alertType").length) {
                    setTimeout(function () { $("#alertType").remove(); }, 1000);
                } else {
                    var text = '    \
                            <div id="alertType" class="alert ' + class_name + '" role="alert">  \
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>    \
                                <strong>'+msg1+'</strong> '+msg2+' \
                            </div>  \
                            ';
                    var dom = $(text);
                    //$("#searchFormId").append(dom).delay(4000).queue(function () { $("#alertType").remove(); });
                    $("#searchFormId").append(dom);
                    setTimeout(function () { $("#alertType").remove(); }, 3000);
                }
                $("html, body").animate({ scrollTop: 0 }, "slow");
            }
            $("#searchUser").click(function () {
                $.ajax({
                    cache: false,
                    type: "POST",
                    url: "/Home/searchUser",
                    data: { id: $.trim($("#searchUserById").val()) },
                    dataType: "json",
                    success: function (serverData) {
                        if (serverData) {
                            $("#userData").collapse('show');
                            $("#userData :input").attr("disabled", true);
                            $("#edit").attr("disabled", false);
                            $("#cancel").attr("disabled", false);
                            $("#update").attr("disabled", false);

                            $("#userIdInSearch :input").attr("disabled", true);

                            $("#userId").val(serverData["User_id"]);
                            $("#userName").val(serverData["User_name"]);
                            $("#userCnic").val(serverData["CNIC"]);
                            $("#userEmail").val(serverData["email"]);
                            $("#userHiredate").val(serverData["hiredate"]);
                            if (serverData["isAdmin"] == 1) {
                                $("#userType").val("Admin");
                            } else {
                                $("#userType").val("Standard User");
                            }
                            $("#userMob").val(serverData["Phone"]);
                            $("#loginId").val(serverData["login_id"]);
                            $("#password").val(serverData["user_password"]);
                            $("#cPassword").val(serverData["user_password"]);
                        } else {
                            showMsg("alert-danger", "Failed", "No Such User Found");
                            $("#userData").collapse('hide');
                        }
                    },
                    error: function () {
                        alert("Critical Error!. Failed to call the server.");
                    }
                });
            });
            $("#edit").click(function () {
                $("#userData :input").attr("disabled", false);
            });
            $("#cancel").click(function () {
                $("#userIdInSearch :input").attr("disabled", false);
                $("#userData").collapse('hide');
            });
            $("#update").click(function () {
                var clientData = {
                    userID: $.trim($("#userId").val()),
                    userName: $.trim($("#userName").val()),
                    userCnic: $.trim($("#userCnic").val()),
                    userEmail: $.trim($("#userEmail").val()),
                    userHiredate: $.trim($("#userHiredate").val()),
                    userMob: $.trim($("#userMob").val()),
                    loginId: $.trim($("#loginId").val()),
                    password: $.trim($("#password").val()),
                    cPassword: $.trim($("#cPassword").val()),
                    userType: $.trim($("#userType").val())
                };
                $.ajax({
                    cache: false,
                    type: "POST",
                    url: "/Home/updateUser",
                    data: { values: clientData },
                    //callback: myfunction(),
                    dataType: "json",
                    success: function (serverData) {
                        //alert(serverData);
                        var flag = 0;
                        for (var i = 0; i < serverData.length; i++) {
                            if (serverData[i] != "empty") {
                                $(serverData[i]).parent('div').addClass("has-error");
                                flag = 1;
                            }
                        }
                        if (flag == 0) {
                            $("input").each(function () {
                                switch (this.type) {
                                    case 'password':
                                    case 'text':
                                    case 'textarea':
                                    case 'file':
                                    case 'select-one':
                                    case 'select-multiple':
                                    case 'date':
                                    case 'number':
                                    case 'tel':
                                    case 'email':
                                        $(this).val('');
                                        break;
                                }
                            });
                            $("textarea").each(function () {
                                $(this).val('');
                            });
                            showMsg("alert-success", "Success", "User's Record Update Successfully");
                            $("#userIdInSearch :input").attr("disabled", false);
                            $("#userData").collapse('hide');
                        } else {
                            showMsg("alert-danger", "Error", "Please Correct Errors and then Continue");
                        }
                    },
                    error: function () {
                        showMsg("alert-danger", "Failed", " to Communicate with Server");
                        //alert("Critical Error!. Failed to call the server.");
                    }
                });
            });
            $("input,textarea").keyup(function () {
                if ($(this).parent().hasClass("has-error")) {
                    //Because both fields of password are related to each other
                    if ($(this).attr('id') == "password" || $(this).attr('id') == "cPassword") {
                        $("#password").parent().removeClass("has-error");
                        $("#cPassword").parent().removeClass("has-error");
                    } else {
                        $(this).parent().removeClass("has-error");
                    }
                }
            });
            $('#expandit').trigger('click');
        });
