            //});
            function showMsg(class_name, msg1, msg2) {
                if ($("#alertType").length) {
                    setTimeout(function () { $("#alertType").remove(); }, 1000);
                } else {
                    var text = '    \
                            <div id="alertType" class="alert ' + class_name + '" role="alert">  \
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>    \
                                <strong>'+ msg1 + '</strong> ' + msg2 + ' \
                            </div>  \
                            ';
                    var dom = $(text);
                    $("#mainDiv").append(dom);
                    setTimeout(function () { $("#alertType").remove(); }, 3000);
                }
                $("html, body").animate({ scrollTop: 0 }, "slow");
            }
            function displayTable() {
                var cont = '<div class="parentDiv" id="parentDiv">\
                            <div class="panel-heading">\
                                <div class="panel-title"><h1 class="myh1">Active Visits</h1></div>\
							    <div class="panel-options">\
								    <a id="refreshTable" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>\
							    </div>\
				            </div>\
                        <div class="panel-body">\
                            <div class="tbl-header">\
                                <table cellpadding="0" cellspacing="0" border="0">\
                                    <thead>\
                                        <tr>\
                                            <th></th>\
                                            <th>Visitor Name</th>\
                                            <th>Student Name</th>\
                                            <th>Relation</th>\
                                            <th>Visitor CNIC</th>\
                                            <th>Visitor Mobile</th>\
                                        </tr>\
                                    </thead>\
                                </table>\
                            </div>\
                            <div class="tbl-content">\
                                <table cellpadding="0" cellspacing="0" border="0">\
                                    <tbody id="tableBody">';
                            cont += '</tbody>\
                                </table>\
                            </div>\
                        </div>\
                    </div>';
                var dom = $(cont);
                $("#searchVisits").append(dom);
                nestedFunction();
            }
            function nestedFunction() {
                $.blockUI({
                    css: {
                        border: 'none',
                        padding: '15px',
                        backgroundColor: '#000',
                        '-webkit-border-radius': '10px',
                        '-moz-border-radius': '10px',
                        opacity: .5,
                        color: '#fff'
                    }
                });
                $.ajax({
                    cache: false,
                    type: "POST",
                    url: "/Home/exitTimeData",
                    dataType: "json",
                    success: function (serverData) {
                        var markup;
                        if (serverData) {
                            for (var i = 0; i < serverData.length ; i++) {
                                markup += '\
                                <tr>\
                                    <td><button id="exitTime_' + serverData[i]["VisitsId"] + '" class="btn btn-danger btn-xs"><i class="glyphicon glyphicon-remove"></i> Mark Exit Time</button></td>\
                                    <td>' + serverData[i]["VisitorName"] + '</td>\
                                    <td id="std_' + serverData[i]["StudentId"] + '">' + serverData[i]["StudentName"] + '</td>\
                                    <td>' + serverData[i]["Relation"] + '</td>\
                                    <td>' + serverData[i]["VisitorCnic"] + '</td>\
                                    <td>' + serverData[i]["VisitorMob"] + '</td>\
                                </tr>';
                            }
                            $("#tableBody").empty();
                            $("#tableBody").append(markup);
                            $.unblockUI();
                        } else {
                            $.unblockUI();
                            showMsg("alert-danger", "Failed", "All Visitors have exited");
                        }
                    },
                    error: function () {
                        $.unblockUI();
                        alert("Critical Error!. Failed to call the server.");
                    }
                });
            }
            displayTable();
            var fullID;
            var visID;
            $("#mainDiv").on("click", "[id^=exitTime_]", function () {
                var $row = $(this).closest("tr"),       // Finds the closest row <tr>
                $tds = $row.find("td");             // Finds all children <td> elements
                var myArr = $tds.map(function () {
                    return $(this).text();
                });
                fullID = "#" + $(this).attr("id");
                visID = $(this).attr("id").split("_").pop();
                $.blockUI({
                    css: {
                        border: 'none',
                        padding: '15px',
                        backgroundColor: '#000',
                        '-webkit-border-radius': '10px',
                        '-moz-border-radius': '10px',
                        opacity: .5,
                        color: '#fff'
                    }
                });
                $.ajax({
                    cache: false,
                    type: "POST",
                    url: "/Home/markExitTime",
                    data: { id: visID },
                    dataType: "json",
                    success: function (serverData) {
                        if (serverData) {
                            $.unblockUI();
                            $('#confirm-delete').modal('show');
                            setTimeout(function () { $('#confirm-delete').modal('hide'); }, 3000);
                            $(fullID).parent().parent().remove();
                        } else {
                            $.unblockUI();
                            showMsg("alert-danger", "Failed", "No Such Visitor Found");
                        }
                    },
                    error: function () {
                        $.unblockUI();
                        alert("Critical Error!. Failed to call the server.");
                    }
                });
            });

            $("input,textarea").keyup(function () {
                if ($(this).parent().hasClass("has-error")) {
                    $(this).parent().removeClass("has-error");
                }
            });
            $("#mainDiv").on("click", "#refreshTable", function () {
                nestedFunction();
            });
        });

        $('#confirm-delete').on('show.bs.modal', function (e) {
            $(this).find('.btn-ok').attr('href', $(e.relatedTarget).data('href'));
        });
        // '.tbl-content' consumed little space for vertical scrollbar, scrollbar width depend on browser/os/platfrom. Here calculate the scollbar width .
        $(window).on("load resize ", function () {
            var scrollWidth = $('.tbl-content').width() - $('.tbl-content table').width();
            $('.tbl-header').css({ 'padding-right': scrollWidth });
